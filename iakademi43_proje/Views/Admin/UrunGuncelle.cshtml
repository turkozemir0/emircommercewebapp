@using iakademi43_proje.Models
@model vw_urunler

@{
    ViewBag.Title = "UrunGuncelle";
    Layout = "~/Views/Shared/admin_layout.cshtml";

    IEnumerable<SelectListItem> cl = ViewData["catlist"] as IEnumerable<SelectListItem>;
    IEnumerable<SelectListItem> sl = ViewData["suplist"] as IEnumerable<SelectListItem>;
    IEnumerable<SelectListItem> statl = ViewData["statuslist"] as IEnumerable<SelectListItem>;
}

<br />
<br />
<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="portlet box purple ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> ÜRÜN GÜNCELLE FORMU
        </div>
        <div class="tools">
            <a href="" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="" class="reload">
            </a>
            <a href="" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body form">

        @using (Html.BeginForm("UrunGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {

            <div class="form-body">

                <div class="form-group">
                    <label class="col-md-3 control-label">ÜRÜN ADI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="ProductName" required maxlength="50" value="@Model.ProductName">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">FİYAT</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="Price" required onkeypress="return numberonly(this, event);" value="@Model.Price">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">KATEGORİ SEÇİNİZ</label>
                    <div class="col-md-9">
                        @Html.DropDownList("CategoryID", cl, "Seçiniz", new { @class = "form-control input-lg", @required = "required" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">MARKA SEÇİNİZ</label>
                    <div class="col-md-9">
                        @Html.DropDownList("SupplierID", sl, "Seçiniz", new { @class = "form-control input-lg", @required = "required" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">STOK</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="Stok" required onkeypress="return numberonly(this, event);" value="@Model.Stok">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">İNDİRİM</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="Discount" onkeypress="return numberonly(this, event);" value="@Model.Discount">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">DURUM SEÇİNİZ</label>
                    <div class="col-md-9">
                        @Html.DropDownList("statusID", statl, "Seçiniz", new { @class = "form-control input-lg", @required = "required" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">ANAHTAR KELİMELER</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="Keywords" value="@Model.Keywords">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">KDV</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="kdv" onkeypress="return numberonly(this, event);" required value="@Model.Kdv">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">BUNA BAKANLAR</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="BunaBakanlar" required value="@Model.BunaBakanlar">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">NOTLAR</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="Notes" value="@Model.Notes">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">RESİM SEÇİNİZ</label>
                    <div class="col-md-9">
                        <input type="file" class="form-control input-lg" name="fileuploader" placeholder="resim seç">
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-3 control-label">AKTİF/PASİF</label>
                    <div class="col-md-9">
                        @*<input type="checkbox" class="form-control input-lg" name="Active" value="@Model.Active" checked="@Model.Active">*@

                        <strong>
                            <label>
                                @Html.CheckBox("Active", @Model.Active)
                            </label>
                    </strong>

                    </div>
                </div>


                <input type="hidden" name="ProductID" value="@Model.ProductID">

            </div>
            <div class="form-actions right1">
                <button type="submit" class="btn purple">GÜNCELLE</button>
            </div>
        }
    </div>
</div>
<!-- END SAMPLE FORM PORTLET-->
