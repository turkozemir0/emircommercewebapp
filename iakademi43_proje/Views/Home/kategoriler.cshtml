@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "kategoriler";
    Layout = "~/Views/Shared/default_layout.cshtml";
}

<!-- Single product area start  -->
<div class="shop-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-9 col-lg-12">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="rp-area">
                            <div class="all-p-title">
                                <h3>
                                    <span style="background-color:red;color:white;font-size:30px;"> @ViewBag.baslik</span>
                                    <span style="background-color:red;color:white;font-size:20px;opacity:0.7;"> KATEGORİSİNDEKİ ÜRÜNLER</span>
                                    
                                </h3>
                            </div>

                            @Html.PagedListPager((IPagedList)ViewBag.kategoriler, Page => Url.Action("kategoriler", new { Page }))

                            <div class="singl-shop ">
                                <div class="row">



                                    @foreach (var item in ViewBag.kategoriler)
                                    {
                                        <!-- SP-SINGLE Product -->
                                        <div class="col-sm-6 col-md-3 col-lg-3">
                                            <div class="sp-single">
                                                <div class="sp-img-area">
                                                    <img class="first-img" src="~/Content/resimler/@item.PhotoPath" alt="" style="height:250px;" />
                                                    <img class="hover-img" src="/Content/resimler/@item.PhotoPath" alt="" style="height:250px;" />
                                                    <div class="quick-view-detail">
                                                        <a href="/Home/Detaylar/@item.ProductID">Detaylar</a>
                                                    </div>
                                                    @*<div class="sp-label-pro sp-label-pro-new" style="background-color: #3ecadf;">YENİ</div>*@
                                                </div>
                                                <div class="sp-info-area">
                                                    <h2 class="product-name"><a title="@item.ProductName" href="/Home/Detaylar/@item.ProductID">@item.ProductName </a></h2>

                                                    <p class="all-prices">
                                                        <span class="sp-price main-price">@item.Price TL</span>
                                                    </p>
                                                    <div class="sp-button">
                                                        <div class="s-button">
                                                            <a href="/Home/Sepet/@item.ProductID" data-toggle="tooltip" data-placement="top" title="Sepete Ekle" class="black-tooltip add-to-cart all_src_icon"> <i class="fa fa-shopping-cart"></i> </a>
                                                        </div>
                                                        <div class="s-button">
                                                            <a href="" data-toggle="tooltip" data-placement="top" title="" class="black-tooltip add-to-cart all_src_icon">  </a>
                                                        </div>
                                                        <div class="s-button last-b ">
                                                            <a href="/Home/Detaylar/@item.ProductID" data-toggle="tooltip" data-placement="top" title="Detaylar" class="black-tooltip add-to-cart all_src_icon"> <i class="fa fa-eye"></i> </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Single product area End  -->
